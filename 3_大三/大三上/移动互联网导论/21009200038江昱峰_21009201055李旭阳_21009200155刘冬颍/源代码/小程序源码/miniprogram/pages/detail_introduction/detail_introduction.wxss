page{
  width: 100%;
  height: 100%;
}
@keyframes fadeIn {
  0% {
    opacity: 0;
  }
  100% {
    opacity: 1;
  }
}
.background_img{
  z-index: -1;
  height: 100%;
  width: 100%;
  
}

.d_img{
  width: 100%;
  height: 100%;
  animation: fadeIn 1s;
  /*animation-delay: 1s;*/
  background-size:100% 100%;
  z-index: -1;
}
.bottom_button{
  width: 90%;
  margin-left: 5%;
  margin-right: 5%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  position: fixed;
  bottom: 100rpx;
}
.back{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}
.add{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}
.shopping_cart{
  width: 60rpx;
  height: 70rpx;
  position: fixed;
  top:50rpx;
  right: 50rpx;
}
.cart{
  width: 50rpx;
  height: 50rpx;
}
.red_point{
  width: 15rpx;
  height: 15rpx;
  border-radius: 50%;
  position: absolute;
  right: 0;
  top:0;
}

