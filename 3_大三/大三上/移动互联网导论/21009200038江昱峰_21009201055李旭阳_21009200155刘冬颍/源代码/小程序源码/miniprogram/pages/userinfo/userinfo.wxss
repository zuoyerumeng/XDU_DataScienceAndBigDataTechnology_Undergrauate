/* pages/userinfo/userinfo.wxss */
page {
  background-color: #EDEDED;
}
.userinfo {
  font-size: 30rpx;
  line-height: 100rpx;
}

.text {
  width: 80%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  /* align-items: left; */
  margin: 0 auto;
  color: rgba(57, 64, 68, 100);
  font-size: 16px;
  text-align: left;
  font-family: 方正工业黑-标准;
}

.userinfo-head {
  margin-top: 60rpx;
  display: flex;
  justify-content: center;
}
.userinfo-head image{
  width: 100px;
  height: 100px;
  border-radius: 50%;
}
.feedback-title {
  width: 80%;
  margin: 0 auto;
  margin-top: 40rpx;
  margin-bottom: 20rpx;
}

.feedback-text {
  background-color: rgba(206, 206, 206, 0.5);
  height: 200rpx;
  width: 80%;
  margin: 0 auto;
  margin-top: 20rpx;
  padding: 4%;
  border-radius: 20rpx;
  font-size: 13px;
  line-height: 20px;
  font-family: PingFangSC-regular;
  box-shadow: 0px 0px 2px 1px rgba(0, 0, 0, 0.1);
}

.check-img {
  height: 44px;
  width: 44px;
  margin-top: 40rpx;
  margin-bottom: 40rpx;
  margin-left: 44.6695%;
  /* margin-right: 60rpx; */
  border-radius: 100%;
}
.submit {
  margin-top: 20rpx;
  margin-bottom: 40rpx;
}